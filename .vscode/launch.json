    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-i=test.dhp"
            ]
        },
        {
            "name": "Filter Name",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-i=test.dhp",
                "-filterName=.*manual.*"
            ]
        },
        {
            "name": "Filter Index",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-i=test.dhp",
                "-filterIndex=270"
            ]
        },
        {
            "name": "Filter All",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-i=test.dhp",
                "-filterName=.*manual.*",
                "-filterIndex=270",
                "-difference=3"
            ]
        },
    ]
}